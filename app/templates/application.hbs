{{#paper-nav-container}}
    {{#if session.isAuthenticated}}
      {{#paper-sidenav class="md-sidenav-left md-whiteframe-z2" locked-open="gt-sm"}}
        {{#paper-toolbar}}
          <div class="md-toolbar-tools">
            <div class="logo">
              <strong>Github Dashboard</strong>
            </div>
          </div>
        {{/paper-toolbar}}

        {{#paper-content}}
          {{#paper-list}}
            {{#paper-item action="transitionTo" param="home"}}Home{{/paper-item}}
          {{/paper-list}}
        {{/paper-content}}
      {{/paper-sidenav}}
    {{/if}}
    <div layout="column" tabindex="-1" role="main" flex>
        {{#paper-toolbar}}
          <div class="md-toolbar-tools">
            {{#if session.isAuthenticated}}
              {{#paper-sidenav-toggle as |toggle|}}
                {{#paper-button target=toggle action="toggleMenu" icon-button=true}}{{paper-icon "menu"}}{{/paper-button}}
              {{/paper-sidenav-toggle}}
              {{!-- <span class="md-breadcrumb-page">Title</span> --}}
              
              {{#paper-menu as |menu|}}
                {{#paper-button target=menu action="toggleMenu" icon-button=false}}
                  {{session.currentUser.username}}{{paper-icon "arrow-drop-down" class="md-menu-origin"}} 
                {{/paper-button}}
              {{else}}
                {{#paper-menu-item action="logout"}}
                  <span>Logout</span>
                {{/paper-menu-item}}
              {{/paper-menu}}
            {{else}}
              {{#paper-toolbar}}
                <div class="md-toolbar-tools">
                  <div class="logo">
                    <strong>Github Dashboard</strong>
                  </div>
                  {{#paper-button raised=true action='signIn' param='github'}}
                    Signin with Github
                  {{/paper-button}}
                </div>
              {{/paper-toolbar}}
            {{/if}}
          </div>
        {{/paper-toolbar}}

      {{#paper-content class="md-padding"}}
        {{outlet}}
      {{/paper-content}}
    </div>
{{/paper-nav-container}}
